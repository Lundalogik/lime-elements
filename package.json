{
  "name": "lime-elements",
  "version": "0.0.0-development",
  "description": "Lime Elements",
  "author": "Lime Technologies",
  "license": "UNLICENSED",
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "SASS_PATH=node_modules stencil build",
    "cm": "git-cz",
    "dev": "SASS_PATH=node_modules stencil build --dev --docs --config stencil.config.dev.ts",
    "dev:watch": "SASS_PATH=node_modules stencil build --dev --watch --docs --config stencil.config.dev.ts",
    "docz:build": "docz build",
    "docz:dev": "docz dev",
    "lint": "npm run lint:src && npm run lint:examples && npm run lint:config",
    "lint:config": "npx eslint -c eslint.js '*.js' && npx prettier -l '{!(package*).json,.prettierrc}'",
    "lint:config:fix": "npx eslint --fix -c eslint.js '*.js' && npx prettier --write '{!(package*).json,.prettierrc}'",
    "lint:examples": "npx tslint --project . -t stylish -c tslint.examples.js 'src/examples/**/*.{ts,tsx}'",
    "lint:examples:fix": "npx tslint --project . -t stylish --fix -c tslint.examples.js 'src/examples/**/*.{ts,tsx}'",
    "lint:fix": "npm run lint:src:fix && npm run lint:examples:fix && npm run lint:config:fix",
    "lint:src": "npx tslint --project . -t stylish -c tslint.js 'src/**/*.{ts,tsx}'",
    "lint:src:fix": "npx tslint --project . -t stylish --fix -c tslint.js 'src/**/*.{ts,tsx}'",
    "prepublishOnly": "npm run build",
    "publish": "npm run build && semantic-release",
    "start": "npm run dev && concurrently --kill-others \"npm run dev:watch\" \"docz dev\"",
    "test": "jest",
    "test.watch": "jest --watch"
  },
  "dependencies": {
    "lime-material-components-web": "^0.38.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.1",
    "@commitlint/config-conventional": "^7.1.1",
    "@stencil/core": "0.12.3",
    "@stencil/sass": "0.1.0",
    "@types/jest": "^21.1.1",
    "commitizen": "^2.10.1",
    "concurrently": "^4.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "docz": "^0.8.0",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "jest": "^21.2.1",
    "prettier": "^1.14.2",
    "semantic-release": "^15.9.12",
    "showdown": "^1.8.6",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "tslint-sonarts": "^1.7.0"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "prepare": [
      "@semantic-release/npm"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ],
    "npmPublish": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lundalogik/lime-elements.git"
  },
  "publishConfig": {
    "registry": "http://npm.lundalogik.com:4873/"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

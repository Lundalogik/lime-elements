{
  "name": "lime-elements",
  "version": "0.0.0-development",
  "description": "Lime Elements",
  "author": "Lime Technologies",
  "license": "UNLICENSED",
  "module": "dist/esm/index.js",
  "main": "dist/index.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "SASS_PATH=node_modules stencil build",
    "dev": "SASS_PATH=node_modules stencil build --dev --watch --serve",
    "lint": "npx tslint --project . -t stylish -c tslint.js 'src/**/*.{ts,tsx}'",
    "lint:fix": "npx tslint --project . -t verbose --fix -c tslint.js 'src/**/*.{ts,tsx}'",
    "lint:lintfile": "npx tslint -t stylish -c tslint.js 'tslint.js'",
    "lint:lintfile:fix": "npx tslint --fix -t stylish -c tslint.js 'tslint.js'",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "test": "jest",
    "test.watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "material-components-web": "^0.36.1"
  },
  "devDependencies": {
    "@stencil/core": "0.10.0-9",
    "@stencil/less": "0.0.1",
    "@stencil/sass": "0.0.5",
    "@types/jest": "^21.1.1",
    "husky": "^1.0.0-rc.9",
    "jest": "^21.2.1",
    "semantic-release": "^15.6.1",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-react": "^3.6.0",
    "tslint-sonarts": "^1.7.0"
  },
  "release": {
    "branch": "master"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lundalogik/lime-elements.git"
  },
  "publishConfig": {
    "registry": "http://npm.lundalogik.com:4873/"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
